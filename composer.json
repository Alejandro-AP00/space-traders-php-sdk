{
    "name": "alejandro-ap00/space-traders-php-sdk",
    "description": "A Space Traders SDK for PHP",
    "keywords": [
        "Alejandro A",
        "space-traders-php-sdk"
    ],
    "homepage": "https://github.com/alejandroaporras/space-traders-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Alejandro A",
            "email": "alejandro.alvarezp00@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "pestphp/pest": "^2.20",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "AlejandroAPorras\\SpaceTraders\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AlejandroAPorras\\SpaceTraders\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
